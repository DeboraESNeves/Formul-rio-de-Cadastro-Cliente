@model Formulario_Cadastro_Cliente.Models.ClienteListViewModel
    
@{
    PageResult pageResult = Model.Paginacao;
    int pagN = pageResult.PaginaAtual;
}
<h1>Clientes</h1>
<div class="mb-3">
    <form method="get" asp-action="List" class="d-inline">
        <input type="hidden" name="apenasAtivos" value="true" />
        <button type="submit" class="btn btn-success">Apenas Ativos</button>
    </form>

    <form method="get" asp-action="List" class="d-inline">
        <input type="hidden" name="apenasAtivos" value="false" />
        <button type="submit" class="btn btn-secondary">Todos os clintes</button>
        </form>

</div>
@if (Model.ApenasAtivos)
{
    <p><strong>Exibindo apenas clientes ativos</strong></p>
}
else
{
    <p><strong>Exibindo todos os clientes</strong></p>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
<div class="container">
    @if (pageResult.TotalPaginas > 0)
    {
        <ul class="pagination justify-content-center">
            @for(var pge = pageResult.PaginaInicial; pge <= pageResult.PaginaFinal; pge++)
            {
                <li class="page-item @(pge == pageResult.PaginaAtual ? "ativo" : "")">
                    <a class="page-link"
                       asp-controller="Clientes"
                       asp-action="List"
                       asp-route-pagina="@pge"
                       asp-route-apenasAtivos="@Model.ApenasAtivos">@pge</a>
                </li>
            }
        </ul>
    }

</div>